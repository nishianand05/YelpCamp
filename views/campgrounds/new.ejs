<!-- Form page -->

<%- include("../partials/header") %>


	<div class="row">
		<h1 style="text-align: center; ">Create a new campground</h1>
		<div style="width:30%; margin: 25px auto;">
            <!-- Form send post request to add new campgrounds 	 -->
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image URL">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01">
				</div>
				
				<div class="form-group">
					<textarea class="form-control" name="description" placeholder="Description" rows="10" cols="10" required></textarea>
					<!-- <input class="form-control" type="text" name="description" placeholder="Description"> -->
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
    	        
             </form>
            <!-- Link to go back to campgrounds page -->
			<a href="/campgrounds">Go back</a>
		</div>

       
    </div>



<%- include("../partials/footer") %>