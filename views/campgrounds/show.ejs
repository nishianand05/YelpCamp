<!-- Show page -->

<%- include("../partials/header") %>

	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelp Camp</p>
			<div class="list-group">
				<li class="list-group-item active">Information 1</li>
				<li class="list-group-item">Information 2</li>
				<li class="list-group-item">Information 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src=" <%= campgrounds.image %> ">
				<div class="caption">
					<h4 class="pull-right">â‚¹<%=campgrounds.price%>/night</h4>
					<h4><a><%= campgrounds.name %></a></h4>
					<p><%= campgrounds.description %></p>
					<p><em>Submitted by <%= campgrounds.author.username %>, <%= moment(campgrounds.createdAt).fromNow() %></em></p>
					<%if(currentUser && campgrounds.author.id.equals(currentUser._id)){%>
					<a class="btn btn-warning" href="/campgrounds/<%=campgrounds._id%>/edit" >Edit</a>
					<form class="delete-form" action="/campgrounds/<%=campgrounds._id%>?_method=DELETE" method="POST">
						<button class="btn btn-danger">
							Delete
						</button>
					</form>
                    <% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
                    <!-- Link to add new comment form page-->
					<a class="btn btn-success" href="/campgrounds/<%= campgrounds._id %>/comments/new">Add Review</a>
				</div>
				
				<% campgrounds.comments.forEach(function(comment){ %>
				<hr>
				<div class="row">
					<div class="col-md-12">
						<strong><%=comment.author.username%></strong>
						<span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
						<p><%= comment.text %></p>
						<%if(currentUser && comment.author.id.equals(currentUser._id)){%>
						<a class="btn btn-xs btn-warning" href="/campgrounds/<%=campgrounds._id%>/comments/<%=comment._id%>/edit">Edit</a>
						<form class="delete-form" action="/campgrounds/<%=campgrounds._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST" >
							<input type="submit" class="btn btn-xs btn-danger" value="Delete">
						</form> 
						<% } %>
					</div>
				</div>
				<% }); %>
			</div>
		</div>
	</div>






<%- include("../partials/footer") %>